<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="mail_setu_rma_details_notification" model="mail.template">
            <field name="name">RMA Notification Email</field>
            <field name="email_from">{{ object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name,
                object.user_id.email) or '' }}
            </field>
            <field name="subject">{{ object.company_id.name }} RMA (Ref {{ object.code or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="model_id" ref="model_setu_return_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="setu_rma.action_report_rma"/>
            <field name="report_name">{{ object.code or '' }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="body_html">
                <![CDATA[
                <p>Dear
                    <t t-out="object.partner_id.name or ''"/>
                    <t t-if="object.partner_id.parent_id">
                        (
                        <i>
                            <t t-out="object.partner_id.parent_id.name"/>
                        </i>
                        )
                    </t>
                    ,
                </p>
                <p>
                    Please find attached Return for
                    <strong>
                        <t t-out="object.sale_order_id.name"/>
                    </strong>
                    with
                    <strong>
                        <t t-out="object.code"/>
                    </strong>
                    in
                    <strong>
                        <t t-out="object.state"/>
                    </strong>
                    status.
                </p>
                <p>Thank you,</p>
                <p style="color:#888888;">
                    <t t-if="object.user_id and object.user_id.signature">
                        <t t-out="object.user_id.signature"/>
                    </t>
                </p>]]>
            </field>
        </record>
    </data>
</odoo>